<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teo.xand0">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="X și 0"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EasyGameActivity"
            android:screenOrientation="portrait"
            android:label="Ușor">
            <intent-filter>
                <action android:name="com.example.teo.Xand0.EasyGameActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MediumGameActivity"
            android:screenOrientation="portrait"
            android:label="Normal">
            <intent-filter>
                <action android:name="com.example.teo.Xand0.MediumGameActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".HardGameActivity"
            android:screenOrientation="portrait"
            android:label="Greu">
            <intent-filter>
                <action android:name="com.example.teo.Xand0.HardGameActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>